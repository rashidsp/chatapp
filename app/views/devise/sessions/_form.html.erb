<div class="row omb_row-sm-offset-3">
  <div class="col-xs-12 col-sm-6">  
    <% flash.each do |key, value| %>
      <div class="flash <%= key %>"><%= value %></div>
    <% end %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: "fomb_loginForm"}) do |f| %>
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-user"></i></span>
        <%= f.email_field :email, autofocus: true, placeholder: "email address", class: "form-control", required: true%>
      </div>
      <span id= "email-validation" class="error-msg"></span>
      
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
        <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "form-control", required: true %>
      </div>
      <span class="error-msg"></span>

      <%= f.submit "Login", class: "btn btn-lg btn-primary btn-block", id: "login_submit_btn"%>

      <div class="col-xs-12 col-sm-3">
        <% if devise_mapping.rememberable? -%>
          <label class="checkbox">
            <%= f.check_box :remember_me %>Remember Me
          </label>
        <% end -%>
      </div>

    <% end %>
    <div class="col-xs-12 col-sm-6 pull-right">
      <p class="omb_forgotPwd">
       <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot password?", new_password_path(resource_name) %><br />
      <% end -%>
      </p>
    </div>
  </div>
</div>