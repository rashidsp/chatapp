  <div class="container clearfix" ng-controller="ConversationCtrl">
    <% if user_signed_in? %>
      <li>
        <%= link_to "Log Out", destroy_user_session_path, method: :delete %>
      </li>
    <% else %>
      <li>
        <%= link_to('Login', new_user_session_path)  %>
      </li>
    <% end %>
    <div class="people-list" id="people-list">
      <div class="search">
        <input type="text" placeholder="search" />
        <i class="fa fa-search"></i>
      </div>
      <ul class="list">
      	<div id="conversations">
      		<%= render "list" %>
      	</div>
      	<div id="friend_list" ng-controller="FriendsCtrl">
          <%= render "friend" %>
      	</div>
      </ul>
    </div>
    
    <div class="chat">
      <div class="chat-header clearfix">
        <%= render "chat_header"%>
      </div>
      <div class="chat-history">
        <%= render "chat_history"%>
      </div>
      
      <div class="chat-message clearfix" ng-controller="MessageController">
        <%= render "form"%>
      </div> <!-- end chat-message -->
      
    </div> <!-- end chat -->
    
  </div> <!-- end container -->

